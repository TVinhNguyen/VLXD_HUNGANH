<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= meta.title %></title>
    <meta name="description" content="<%= meta.description %>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="font-sans bg-gray-100">
<div x-data="{ isMenuOpen: false, isScrolled: false }"
     @scroll.window="isScrolled = (window.scrollY > 50)"
     class="relative">

  <!-- Top Bar -->
  <div class="bg-secondary text-white py-2 transition-transform duration-300 fixed w-full z-50"
       :class="{ '-translate-y-full': isScrolled || (isMenuOpen && window.innerWidth < 768) }">
    <div class="container mx-auto px-4 flex justify-between items-center text-sm">
      <div class="flex items-center space-x-6">
        <a href="tel:+84123456789" class="flex items-center space-x-2">
          <i class="fas fa-phone h-4 w-4"></i>
          <span>+84 123 456 789</span>
        </a>
        <a href="mailto:info@vungxay.com" class="flex items-center space-x-2">
          <i class="fas fa-envelope h-4 w-4"></i>
          <span>info@vungxay.com</span>
        </a>
      </div>
      <div class="hidden md:flex items-center space-x-4">
        <span>Follow us:</span>
        <i class="fab fa-facebook-f h-4 w-4 cursor-pointer hover:text-primary transition-colors"></i>
        <i class="fab fa-instagram h-4 w-4 cursor-pointer hover:text-primary transition-colors"></i>
        <i class="fab fa-linkedin-in h-4 w-4 cursor-pointer hover:text-primary transition-colors"></i>
      </div>
    </div>
  </div>

  <!-- Main Header -->
  <header class="fixed w-full z-40 bg-white transition-all duration-300"
          :class="{
            'shadow-lg py-2 top-0': isScrolled || (isMenuOpen && window.innerWidth < 768),
            'shadow-md py-4 top-10': !isScrolled && !(isMenuOpen && window.innerWidth < 768)
          }">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-gray-800">
        VLXD<span class="text-primary">Hùng Anh</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-text-color hover:text-primary transition-colors">Trang chủ</a>
        <a href="/san-pham" class="text-text-color hover:text-primary transition-colors">Sản phẩm</a>
        <a href="/gioi-thieu" class="text-text-color hover:text-primary transition-colors">Giới thiệu</a>
        <a href="/lien-he" class="text-text-color hover:text-primary transition-colors">Liên hệ</a>
        <a href="#" class="bg-primary hover:bg-primary-dark text-secondary font-semibold px-4 py-2 rounded-md">Yêu cầu báo giá</a>
      </nav>

      <!-- Mobile Toggle -->
      <button class="md:hidden text-gray-800 focus:outline-none" @click="isMenuOpen = !isMenuOpen">
        <i x-show="!isMenuOpen" class="fas fa-bars h-6 w-6"></i>
        <i x-show="isMenuOpen" x-cloak class="fas fa-times h-6 w-6"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div x-show="isMenuOpen" x-cloak
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 -translate-y-2"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 -translate-y-2"
         class="md:hidden absolute top-full left-0 w-full bg-white shadow-lg border-t">
      <nav class="flex flex-col p-4 space-y-2">
        <a href="/" @click="isMenuOpen = false" class="text-text-color hover:text-primary transition-colors py-2 px-2 rounded-md hover:bg-gray-100">Trang chủ</a>
        <a href="/san-pham" @click="isMenuOpen = false" class="text-text-color hover:text-primary transition-colors py-2 px-2 rounded-md hover:bg-gray-100">Sản phẩm</a>
        <a href="/gioi-thieu" @click="isMenuOpen = false" class="text-text-color hover:text-primary transition-colors py-2 px-2 rounded-md hover:bg-gray-100">Giới thiệu</a>
        <a href="/lien-he" @click="isMenuOpen = false" class="text-text-color hover:text-primary transition-colors py-2 px-2 rounded-md hover:bg-gray-100">Liên hệ</a>
        <a href="#" class="bg-primary hover:bg-primary-dark text-secondary font-semibold mt-4 w-full text-center py-2 rounded-md">Yêu cầu báo giá</a>
      </nav>
    </div>
  </header>

  <!-- Spacer for fixed header -->
  <div class="h-28"></div>

  <!-- Main Content -->
  <main class="w-full px-0">
