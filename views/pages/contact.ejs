<%- include('../partials/header', { meta: { title: title, description: 'Liên hệ với chúng tôi để được tư vấn và báo giá vật liệu xây dựng tốt nhất.' } }) %>
<main>

    <!-- Page Header -->
    <div class="bg-slate-800 py-16">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl font-bold text-white mb-4">Liên hệ</h1>
            <p class="text-xl text-slate-300 max-w-2xl mx-auto">
                Liên hệ với chuyên gia của chúng tôi cho mọi nhu cầu về vật liệu xây dựng
            </p>
        </div>
    </div>

    <div class="container mx-auto px-4 py-16">
        <div class="grid lg:grid-cols-3 gap-12">
            <!-- Contact Form -->
            <div class="lg:col-span-2">
                <div class="bg-white shadow-lg rounded-lg border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-2xl font-bold text-slate-800">Gửi tin nhắn cho chúng tôi</h2>
                        <p class="text-slate-600 mt-2">Điền vào biểu mẫu dưới đây, chúng tôi sẽ phản hồi sớm nhất có thể.</p>
                    </div>
                    <div class="p-6">
                        <!-- Display Errors -->
                        <% if (errors && errors.length > 0) { %>
                            <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
                                <div class="flex">
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-red-800">
                                            Vui lòng sửa các lỗi sau:
                                        </h3>
                                        <div class="mt-2 text-sm text-red-700">
                                            <ul class="list-disc pl-5 space-y-1">
                                                <% errors.forEach(error => { %>
                                                    <li><%= error %></li>
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>

                        <form method="POST" action="/contact" class="space-y-6">
                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Họ và tên *</label>
                                    <input
                                        type="text"
                                        name="name"
                                        required
                                        value="<%= formData.name || '' %>"
                                        placeholder="Nhập họ và tên của bạn"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Email *</label>
                                    <input
                                        type="email"
                                        name="email"
                                        required
                                        value="<%= formData.email || '' %>"
                                        placeholder="Nhập email của bạn"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    />
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Số điện thoại *</label>
                                    <input
                                        type="tel"
                                        name="phone"
                                        required
                                        value="<%= formData.phone || '' %>"
                                        placeholder="+84 123 456 789"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Tên công ty</label>
                                    <input
                                        type="text"
                                        name="company"
                                        value="<%= formData.company || '' %>"
                                        placeholder="Tên công ty của bạn"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    />
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Loại yêu cầu *</label>
                                    <select
                                        name="inquiryType"
                                        required
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    >
                                        <option value="">Chọn loại yêu cầu</option>
                                        <% inquiryTypes.forEach(type => { %>
                                            <option value="<%= type.value %>" <%= formData.inquiryType === type.value ? 'selected' : '' %>>
                                                <%= type.label %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Loại dự án</label>
                                    <select
                                        name="projectType"
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent"
                                    >
                                        <option value="">Chọn loại dự án</option>
                                        <% projectTypes.forEach(type => { %>
                                            <option value="<%= type.value %>" <%= formData.projectType === type.value ? 'selected' : '' %>>
                                                <%= type.label %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-2">Nội dung *</label>
                                <textarea
                                    name="message"
                                    required
                                    rows="6"
                                    placeholder="Vui lòng mô tả yêu cầu dự án, số lượng, thời gian hoặc câu hỏi cụ thể..."
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent resize-vertical"
                                ><%= formData.message || '' %></textarea>
                            </div>

                            <button
                                type="submit"
                                class="w-full bg-yellow-400 hover:bg-yellow-500 text-slate-800 font-semibold py-3 px-4 rounded-md transition-colors duration-200 flex items-center justify-center"
                            >
                                <i data-lucide="send" class="mr-2 h-5 w-5"></i>
                                Gửi tin nhắn
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="space-y-6">
                <% contactInfo.forEach(info => { %>
                    <div class="bg-white shadow-lg rounded-lg border border-gray-200">
                        <div class="p-6">
                            <div class="flex items-center mb-4">
                                <i data-lucide="<%= info.icon %>" class="h-6 w-6 text-yellow-400 mr-3"></i>
                                <h3 class="text-lg font-bold text-slate-800"><%= info.title %></h3>
                            </div>
                            <div class="space-y-3">
                                <% info.details.forEach(detail => { %>
                                    <div>
                                        <div class="text-sm font-medium text-slate-600"><%= detail.label %></div>
                                        <div class="text-slate-800"><%= detail.value %></div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% }); %>

               

                <!-- Social Media -->
                
            </div>
        </div>

        <!-- Map Section -->
        <div class="mt-16">
            <h2 class="text-3xl font-bold text-slate-800 mb-8 text-center">Tìm địa chỉ của chúng tôi</h2>
            <div class="grid md:grid-cols-3 gap-8 mb-8">
                <div class="bg-white shadow-lg rounded-lg border border-gray-200">
                    <div class="p-6 text-center">
                        <span class="inline-block bg-yellow-400 text-slate-800 px-3 py-1 rounded-full text-sm font-medium mb-4">Trụ sở chính</span>
                        <h3 class="font-bold text-slate-800 mb-2">Đại Lộc, Quảng Nam</h3>
                        <p class="text-slate-600 text-sm mb-4">232 Đỗ Đăng Tuyển, Đại Lộc, Quảng Nam</p>
                        <a href="https://maps.app.goo.gl/r8S5HezcLcQiPYkm6" target="_blank" rel="noopener" class="border border-gray-300 text-slate-700 px-4 py-2 rounded-md hover:bg-gray-50 transition-colors">
                            Chỉ đường
                        </a>
                    </div>
                </div>
                <div class="bg-white shadow-lg rounded-lg border border-gray-200">
                    <div class="p-6 text-center">
                        <span class="inline-block bg-slate-600 text-white px-3 py-1 rounded-full text-sm font-medium mb-4">Showroom</span>
                        <h3 class="font-bold text-slate-800 mb-2">Đại Lộc, Quảng Nam</h3>
                        <p class="text-slate-600 text-sm mb-4">133 Đỗ Đăng Tuyển, Đại Lộc, Quảng Nam</p>
                        <a href="https://maps.app.goo.gl/jmapgudezPjHhytGA" target="_blank" rel="noopener" class="border border-gray-300 text-slate-700 px-4 py-2 rounded-md hover:bg-gray-50 transition-colors">
                            Chỉ đường
                        </a>
                    </div>
                </div>
                <div class="bg-white shadow-lg rounded-lg border border-gray-200">
                    <div class="p-6 text-center">
                        <span class="inline-block bg-slate-600 text-white px-3 py-1 rounded-full text-sm font-medium mb-4">Kho hàng</span>
                        <h3 class="font-bold text-slate-800 mb-2">Đại Lộc, Quảng Nam</h3>
                        <p class="text-slate-600 text-sm mb-4">275 Đỗ Đăng Tuyển, Đại Lộc, Quảng Nam</p>
                        <a href="https://maps.app.goo.gl/CQN6VRxDRd7xUe9t5" target="_blank" rel="noopener" class="border border-gray-300 text-slate-700 px-4 py-2 rounded-md hover:bg-gray-50 transition-colors">
                            Chỉ đường
                        </a>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Form submission loading state
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = e.target.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i data-lucide="loader-2" class="mr-2 h-5 w-5 animate-spin"></i>Đang gửi...';
            submitBtn.disabled = true;
        });
    </script>
</main>
<%- include('../partials/footer') %>
